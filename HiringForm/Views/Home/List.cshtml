@model List<HiringForm.Models.Entities.Applicant>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Başvuru Sahipleri</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center mb-4">Başvuru Sahipleri (Skora Göre Sıralı)</h2>

        @if (Model != null && Model.Any())
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Ad</th>
                        <th>Soyad</th>
                        <th>Doğum Yeri</th>
                        <th>Doğum Tarihi</th>
                        <th>Telefon</th>
                        <th>Mail</th>
                        <th>Skor</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>@(i + 1)</td>
                            <td>@Model[i].Name</td>
                            <td>@Model[i].Surname</td>
                            <td>@Model[i].Birthplace</td>
                            <td>@Model[i].Birthdate.ToString("dd/MM/yyyy")</td>
                            <td>@Model[i].Phone</td>
                            <td>@Model[i].Email</td>
                            <td>@Model[i].Score</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-info" role="alert">
                Şu anda listelenecek başvuru sahibi bulunmamaktadır.
            </div>
        }
    </div>
</body>
</html>
